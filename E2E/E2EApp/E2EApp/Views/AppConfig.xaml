<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:helpers="clr-namespace:E2EApp.Helpers"
             xmlns:essentials="clr-namespace:Xamarin.Essentials;assembly=Xamarin.Essentials"
             Title="App Config"
             x:Class="E2EApp.Views.AppConfig">
  <StackLayout>
    <!-- Place new controls here -->
    <Label AutomationId="ClientSecret" 
           Text="{x:Static helpers:Secrets.ClientSecret}" 
           HorizontalOptions="Center" 
           VerticalOptions="CenterAndExpand" />
    <Label AutomationId="BuildString" 
           Text="{x:Static essentials:AppInfo.BuildString}"
           HorizontalOptions="Center" 
           VerticalOptions="CenterAndExpand" />
    <Label AutomationId="VersionString" 
           Text="{x:Static essentials:AppInfo.VersionString}"
           HorizontalOptions="Center" 
           VerticalOptions="CenterAndExpand" />
  </StackLayout>
</ContentPage>